        <calc id="F16" type="currency" expression="C5 * C6" precision="2" />
        <calc id="F17" type="currency" expression="F16 + C8" precision="2" />
        <calc id="F18" type="currency" expression="F17 * K2" precision="0" />
        <calc id="F19" type="currency" expression="C9 * K3" precision="0" />
