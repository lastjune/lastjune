        <calc id="F5" type="currency" expression="F4 + C8" precision="2" />
        <calc id="F6" type="currency" expression="F5 * C7" precision="0" />
        <calc id="F7" type="currency" expression="C9 * C10" precision="0" />
        <calc id="F8" type="currency" expression="C11 * C12" precision="2" />
        <calc id="F9" type="currency" expression="F8 + C14" precision="2" />
        <calc id="F10" type="currency" expression="F9 * C13" precision="0" />
