                <item row="1" col="6" description="Average Preventative Maintenace Spend per Preventative Maintenance Event" value="{C4}" operation="e" />
                <item row="1" col="7" description="Total Preventative Maintenance Costs per event" value="{F14}" operation="m" />
                <item row="1" col="8" description="Preventative Maintenance - Average Events Annually" value="{K1}" operation="e" />
                <item row="1" col="9" description="Annual Preventative Maintenance Costs" value="{F15}" border="true" />
