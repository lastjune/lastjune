        <calc id="F23" type="currency" expression="C15 * C16" precision="2" />
        <calc id="F24" type="currency" expression="F23 * K5" precision="0" />
        <calc id="B1" type="currency" expression="F3 - F15" precision="0" />
        <calc id="B2" type="currency" expression="F6 - F18" precision="0" />
        <calc id="B3" type="currency" expression="F7 - F19" precision="0" />
        <calc id="B4" type="currency" expression="F10 - F22" precision="0" />
        <calc id="B5" type="currency" expression="F12 - F24" precision="0" />
        <calc id="B6" type="currency" expression="F3 + F6 + F7 + F10 + F12" precision="0" />
        <calc id="B7" type="currency" expression="F15 + F18 + F19 + F22 + F24 + P6 + P7" precision="0" />
        <calc id="B8" type="currency" expression="B6 - B7" precision="0" />
        <calc id="B9" type="currency" expression="B6 * C18" precision="0" />
        <calc id="B10" type="currency" expression="B7 * C18" precision="0" />
        <calc id="B11" type="currency" expression="B9 - B10" precision="0" />
        <calc id="B12" type="currency" expression="F0 - P6" precision="0" />
        <calc id="B13" type="currency" expression="F0 - P7" precision="0" />
        <calc id="B14" type="number" expression="(P6 + P7) / B8" precision="1" />
        <calc id="VK1" type="number" expression="-C3 * (P1 - 1)" precision="2" />
        <calc id="VK2" type="number" expression="-C7 * (P2 - 1)" precision="2" />
        <calc id="VK3" type="number" expression="C10 - C10 * P3" precision="2" />
        <calc id="VK4" type="number" expression="-C13 * (P4 - 1) " precision="2" />
        <calc id="VK5" type="number" expression="-C17 * -0.8" precision="0" />
        <calc id="VK6" type="currency" expression="C6  " precision="2" />
